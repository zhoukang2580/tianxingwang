.share-image {
  border-radius: 50%;
  width: 5rem;
  height: 5rem;
}

.save-button {
  position: relative;
}

.share {
  margin: 0 1rem;
  position: fixed;
  bottom: 0.5rem;
  left: 10%;
  right: 10%;
  /* height: 2.5rem; */
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.cancel {
  position: absolute;
  left: 1em;
  bottom: 1em;
  width: 5em;
  height: 2em;
  font-size: 0.6rem;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login {
  width: 90%;
  background-color: #2596d9;
  color: white;
}

.share-info {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}
.share-info image{
  width: 96%;
  object-fit: contain;
}
.share-info .title {
  margin: 0.5rem 0;
  font-size: 1.9rem;
  align-self: flex-start;
}

navigator {
  width: 90%;
}

.cancel {
  background-color: #9f9f9f;
  color: white;
  text-align: center;
  border-radius: 5px;
  margin-top: 1em;
}